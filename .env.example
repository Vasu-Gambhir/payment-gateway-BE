# Backend Environment Variables
# Copy this file to .env and update the values for your environment

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URL=mongodb://localhost:27017/payment-gateway

# Authentication
JWT_SECRET=your-very-secure-jwt-secret-key-change-this-in-production

# Email Configuration - Development (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Configuration - Production (Brevo)
BREVO_API_KEY=your-brevo-api-key
BREVO_SENDER_EMAIL=your-verified-sender@yourdomain.com
BREVO_SENDER_NAME=Payment Gateway

# Email Settings
FROM_EMAIL=noreply@paymentgateway.com
FROM_NAME=Payment Gateway

# Optional: Database Configuration for Docker/Cloud
# MONGODB_URL=mongodb://admin:password@localhost:27017/payment-gateway?authSource=admin

# Optional: Production MongoDB (Atlas)
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/payment-gateway?retryWrites=true&w=majority